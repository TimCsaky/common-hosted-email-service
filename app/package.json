{
  "name": "common-hosted-email-service",
  "version": "1.0.0",
  "private": true,
  "description": "CHES - Powered by NodeMailer (a shared library)",
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "scripts": {
    "build": "echo Nothing to build",
    "clean": "rm -rf coverage dist",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "lint": "eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "migrate:down": "knex migrate:down",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:up": "knex migrate:up",
    "migrate": "npm run migrate:latest",
    "postrebuild": "npm run build",
    "postreinstall": "npm install",
    "posttest": "node ./lcov-fix.js",
    "pretest": "npm run lint",
    "purge": "rm -rf ./node_modules",
    "rebuild": "npm run clean",
    "reinstall": "npm run purge",
    "serve": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "test:all": "jest --verbose --forceExit --detectOpenHandles",
    "test:integration": "jest --verbose --testPathIgnorePatterns unit --collectCoverage false --forceExit --detectOpenHandles",
    "test:unit": "jest --verbose --testPathIgnorePatterns integration --forceExit --detectOpenHandles",
    "test": "npm run test:unit"
  },
  "homepage": "https://github.com/bcgov/common-hosted-email-service",
  "dependencies": {
    "api-problem": "^9.0.2",
    "bull": "^4.12.0",
    "bytes": "^3.1.2",
    "compression": "^1.7.4",
    "config": "^3.3.11",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.8",
    "nunjucks": "^3.2.4",
    "objection": "^3.1.3",
    "pg": "^8.11.3",
    "tmp": "^0.2.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es2020": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/docs/*.*",
      "!src/middleware/*.*",
      "!src/services/*.*",
      "!src/services/migrations/*.*",
      "!src/services/models/*.*"
    ]
  },
  "license": "Apache-2.0",
  "nodemonConfig": {
    "ignore": [
      "node_modules/**/node_modules",
      "test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/common-hosted-email-service.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/common-hosted-email-service/issues"
  }
}
